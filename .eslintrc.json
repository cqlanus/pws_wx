{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": ["react"],
    "parser": "babel-eslint",
    "rules": {
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": "off",
        "no-unused-vars": "warn",
        "no-console": "off",
        "no-unreachable": "warn",
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    }
}
